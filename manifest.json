{
    "manifest_version": 2,
    "version": "1.0",

    "name": "JavaScript Skimmer Detector",
    "description" : "Detect JavaScript Skimmers on websites.",

    "icons": {
        "16": "app/images/get_started16.png",
        "32": "app/images/get_started32.png",
        "48": "app/images/get_started48.png",
        "128": "app/images/get_started128.png"
    },

    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "http://*/*",
        "file://*/*",
        "https://*/*"
    ],

    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "app/images/get_started16.png",
            "32": "app/images/get_started32.png",
            "48": "app/images/get_started48.png",
            "128": "app/images/get_started128.png"
        }
    },
    "content_scripts": [
        {
            "all_frames": false,
            "js": [
                "dist/content.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],

    "log": true
}
